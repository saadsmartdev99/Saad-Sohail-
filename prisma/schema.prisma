generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

enum Tier {
  BASIC
  PRO
  ENTERPRISE
}

enum BillingCycle {
  MONTHLY
  YEARLY
}

enum PaymentStatus {
  PENDING
  ACTIVE
  PAST_DUE
  CANCELED
}

model User {
  id        String           @id @default(cuid())
  email     String           @unique
  createdAt DateTime         @default(now())
  updatedAt DateTime         @updatedAt

  messages  ChatMessage[]
  usages    MonthlyUsage[]
  bundles   SubscriptionBundle[]
}

model ChatMessage {
  id        String   @id @default(cuid())
  user      User     @relation(fields: [userId], references: [id])
  userId    String
  content   String
  createdAt DateTime @default(now())

  @@index([userId, createdAt])
}

model MonthlyUsage {
  id           String   @id @default(cuid())
  user         User     @relation(fields: [userId], references: [id])
  userId       String
  year         Int
  month        Int
  usedMessages Int      @default(0)
  maxMessages  Int?     // null => unlimited (e.g. Enterprise)
  createdAt    DateTime @default(now())
  updatedAt    DateTime @updatedAt

  @@unique([userId, year, month])
}

model SubscriptionBundle {
  id              String         @id @default(cuid())
  user            User           @relation(fields: [userId], references: [id])
  userId          String
  tier            Tier
  billingCycle    BillingCycle
  paymentStatus   PaymentStatus  @default(PENDING)
  maxMessages     Int?           // null => unlimited (e.g. Enterprise)
  currentPeriodStart DateTime
  currentPeriodEnd   DateTime
  createdAt       DateTime       @default(now())
  updatedAt       DateTime       @updatedAt
  canceledAt      DateTime?

  @@index([userId, paymentStatus])
  @@index([billingCycle, paymentStatus, currentPeriodEnd])
}
